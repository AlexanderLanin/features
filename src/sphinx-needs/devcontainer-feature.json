  "installsAfter": [
    "ghcr.io/devcontainers/features/python",
    "ghcr.io/AlexanderLanin/features/plantuml"
  ],
  "customizations": {
    "vscode": {
      "extensions": ["lextudio.restructuredtext-pack"]
    }
  }
}
